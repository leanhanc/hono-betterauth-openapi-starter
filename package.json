{
	"name": "hono-betterauth-openapi-starter",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"build": "bun build src/index.ts --outfile ./dist/index.js --target bun",
		"start": "bun run dist/index.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"db:generate": "bunx drizzle-kit generate",
		"db:migrate": "bunx drizzle-kit migrate",
		"migrate:push": "bunx drizzle-kit push"
	},
	"version": "0.0.1",
	"type": "module",
	"dependencies": {
		"@hono/zod-openapi": "^1.1.0",
		"@scalar/hono-api-reference": "^0.9.13",
		"better-auth": "^1.3.4",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"drizzle-zod": "^0.8.3",
		"hono": "^4.9.0",
		"hono-pino": "^0.10.1",
		"pino-logger": "^1.0.0",
		"pino-pretty": "^13.1.1",
		"postgres": "^3.4.7",
		"stoker": "^2.0.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.31.0",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1"
	}
}
